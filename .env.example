# Backend Environment Variables for Production
# Use these in Railway dashboard

# Database (auto-generated by Railway when PostgreSQL is added)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-strong-random-secret-key-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (add your Vercel frontend URL here)
BACKEND_CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# Other settings
APP_NAME=Taskie
DEBUG=False
DEVELOPMENT_MODE=False

# Email settings (optional, for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
